---
interface Props {
    title: string
}

const { title } = Astro.props

---

<!DOCTYPE html>
<html lang="en" class="dark: bg-slate-900 text-slate-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    <main class="mx-auto container">
        <slot/>    
    </main>
</body>
</html>